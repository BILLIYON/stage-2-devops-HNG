# images supplied by grader/CI
BLUE_IMAGE=ghcr.io/your-org/app-blue:latest
GREEN_IMAGE=ghcr.io/your-org/app-green:latest

# Which pool should be active by default: "blue" or "green"
ACTIVE_POOL=blue

# Release IDs returned by apps in X-Release-Id
RELEASE_ID_BLUE=blue-release-2025-10-28
RELEASE_ID_GREEN=green-release-2025-10-28

# App container listening port (apps accept this)
PORT=3000

# Nginx listen port on host (public entrypoint)
NGINX_PUBLIC_PORT=8080

# Direct (host-exposed) ports for grader to call /chaos/*
BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082
